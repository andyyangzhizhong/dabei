<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qckj.dabei.view.ActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:function="button_left|text_title"
        app:srcLeft="@drawable/back_bg_selector"
        app:text_title="@string/app_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/enterprise_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nearby_head_rb_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="企业商家服务"
            android:textColor="@drawable/nearby_head_text_bg_selector"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/unity_service"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/nearby_head_rb_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="个体商家服务"
            android:textColor="@drawable/nearby_head_text_bg_selector"
            android:textSize="15sp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/service_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>