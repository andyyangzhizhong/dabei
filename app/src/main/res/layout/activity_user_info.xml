<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qckj.dabei.view.ActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:function="button_left|text_title"
        app:srcLeft="@drawable/back_bg_selector"
        app:text_title="@string/mine_info" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_size"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/user_head_portrait_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:text="@string/mine_head_portrait"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <com.qckj.dabei.view.image.CircleImageView
            android:id="@+id/user_head_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_size"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:background="@color/line" />
    </RelativeLayout>

    <com.qckj.dabei.view.CommonItemView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrowVisible="true"
        app:itemTitle="昵称"
        app:lineVisible="true" />

    <com.qckj.dabei.view.CommonItemView
        android:id="@+id/user_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrowVisible="true"
        app:itemTitle="性别"
        app:lineVisible="true" />

    <com.qckj.dabei.view.CommonItemView
        android:id="@+id/user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrowVisible="true"
        app:itemTitle="换绑手机"
        app:lineVisible="true" />

    <com.qckj.dabei.view.CommonItemView
        android:id="@+id/modify_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrowVisible="true"
        app:itemTitle="修改登录密码"
        app:lineVisible="true" />

    <Button
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/login_btn_bg"
        android:text="@string/mine_exit_login"
        android:textColor="@color/white"
        android:textSize="16sp" />


</LinearLayout>